<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="demaikel.sistemasexpertos.EmailFragment">

    <Button
        android:id="@+id/contactBtn"
        android:drawableLeft="@mipmap/ic_email_white_24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ContaÃ¡ctanos Ahora"
        android:theme="@style/PrimaryButton" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:hint="Su Mensaje"
        android:visibility="gone">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/msget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/sendBtn"
        android:drawableLeft="@mipmap/ic_send_white_24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ENVIAR"
        android:theme="@style/PrimaryButton"
        android:visibility="gone"/>


</LinearLayout>
